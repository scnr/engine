#!/usr/bin/env ruby
require_relative '../cuboid/application'

SCNR::Application.options = {
    url:    'http://testhtml5.vulnweb.com',
    audit:  {
        elements: [:links, :forms, :cookies]
    },
    checks: 'active/*'
}

# SCNR::Application.run

i = SCNR::Application.spawn( :instance )
i.run SCNR::Application.options

sleep 1

i.pause!
ap i.status

sleep 5

i.resume!
ap i.status

sleep 5

i.pause!
ap i.status

sleep 5

i.resume!
ap i.status

sleep 1 while i.busy?

ap i.progress

i.shutdown
